<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_weight="0.00" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_item_column"
                android:orientation="vertical">

                <com.jiebao.baqiang.view.JBItemEdit
                    android:id="@+id/car_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:enabled="true"
                    android:orientation="horizontal"
                    android:src="@drawable/icon_action_choice"
                    android:text="@string/car_code" />

                <com.jiebao.baqiang.view.JBItemEdit
                    android:id="@+id/next_station"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:enabled="true"
                    android:orientation="horizontal"
                    android:src="@drawable/icon_action_choice"
                    android:text="@string/next_station" />

                <com.jiebao.baqiang.view.JBItemEdit
                    android:id="@+id/express_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:enabled="true"
                    android:orientation="horizontal"
                    android:src="@drawable/icon_action_choice"
                    android:text="@string/express_type" />

                <com.jiebao.baqiang.view.JBItemEdit
                    android:id="@+id/tracking_numb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:text="@string/tracking_numb"
                    app:lth="100" />
            </LinearLayout>

            <!--   <include layout="@layout/include_expand_button" />-->
                <LinearLayout
                    android:id="@+id/listview_title"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/shipment_number"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="序号"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="单号"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="状态"
                        android:textSize="20sp" />

                </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <com.jiebao.baqiang.custView.CouldDeleteListView
        android:id="@+id/list_view_scan_data"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:transcriptMode="alwaysScroll"
        android:layout_above="@id/ll_btn_function"
        android:layout_below="@id/listview_title">
    </com.jiebao.baqiang.custView.CouldDeleteListView>

    <LinearLayout
        android:id="@+id/ll_btn_function"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/bg_item_column"
        android:gravity="end|center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_min">

        <Button
            android:id="@+id/ok_button"
            style="@style/list_item_title_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_yellow_selector"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/cancel_button"
            style="@style/list_item_title_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_min"
            android:layout_marginStart="@dimen/margin_min"
            android:background="@drawable/bg_green_selector"
            android:text="@string/tab_back"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
    </LinearLayout>

</LinearLayout>
