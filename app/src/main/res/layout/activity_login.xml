<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_maxi"
        android:paddingTop="@dimen/padding_maxi">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_max"
        android:layout_marginRight="@dimen/margin_max"
        android:layout_marginTop="@dimen/margin_mid"
        android:background="@drawable/input_plate_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_min">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_user_name" />

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_min"
            android:background="@null"
            android:digits="@string/filter_vcode_number"
            android:hint="@string/hint_user_name"
            android:maxEms="30"
            android:maxLength="6"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_mid_size"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_max"
        android:layout_marginRight="@dimen/margin_max"
        android:layout_marginTop="@dimen/margin_mid"
        android:background="@drawable/input_plate_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_min">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/passward" />

        <EditText
            android:id="@+id/et_passward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_min"
            android:background="@null"
            android:hint="@string/hint_passward"
            android:inputType="textPassword"
            android:maxLength="6"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_mid_size" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="54dip"
            android:layout_marginLeft="@dimen/margin_max"
            android:layout_marginRight="@dimen/margin_max"
            android:layout_marginTop="@dimen/margin_mid"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/black"
            android:textSize="@dimen/text_mid_size" />

        <Button
            android:id="@+id/btn_wifi_setttings"
            android:layout_width="0dp"
            android:layout_height="54dip"
            android:layout_marginLeft="@dimen/margin_max"
            android:layout_marginRight="@dimen/margin_max"
            android:layout_marginTop="@dimen/margin_mid"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/set_wifi"
            android:textColor="@color/black"
            android:textSize="@dimen/text_mid_size" />
    </LinearLayout>


</LinearLayout>