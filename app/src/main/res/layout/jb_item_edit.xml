<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jb_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/column_height"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/margin_mid">

    <TextView
        android:id="@+id/tv_left_text"
        style="@style/list_item_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/iv_action_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_min"
        android:layout_marginStart="@dimen/margin_min"
        android:src="@drawable/icon_input_sure"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_action_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_min"
        android:layout_marginStart="@dimen/margin_min"
        android:src="@drawable/icon_question"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_edit_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_displayt_text"
            style="@style/list_item_sub_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_min"
            android:paddingRight="@dimen/margin_min"
            android:textColor="@color/color_2"
            android:textColorHint="@color/french_grey"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/decrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_decrease_selector"
            android:visibility="gone" />

        <AutoCompleteTextView
            android:id="@+id/et_input_text"
            android:completionThreshold="1"
            style="@style/list_item_sub_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/editor_selector"
            android:gravity="center_vertical"
            android:imeOptions="actionNext"
            android:paddingLeft="@dimen/margin_min"
            android:paddingRight="@dimen/margin_min"
            android:selectAllOnFocus="true"
            android:textColor="@color/color_2"
            android:textColorHint="@color/french_grey" />

        <ImageButton
            android:id="@+id/increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_increase_selector"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_action_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:minHeight="@dimen/activity_margin_min"
        android:minWidth="@dimen/activity_margin_min"
        android:src="@drawable/icon_delete"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_action_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/tv_item_tip"
        style="@style/list_item_sub_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_min"
        android:layout_marginStart="@dimen/margin_min"
        android:layout_weight="0.8"
        android:gravity="end"
        android:textColor="@color/gray"
        android:visibility="gone" />
</LinearLayout>