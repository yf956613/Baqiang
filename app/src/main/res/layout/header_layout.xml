<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dip"
    android:background="@drawable/base_header_bg"
    android:id="@+id/headLayout"
    android:paddingLeft="5dip"
    android:paddingRight="5dip">

    <com.jiebao.baqiang.custView.TimeView
        android:id="@+id/headerLeftView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/headerCenterView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dip"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        />

    <com.jiebao.baqiang.custView.BatteryView
        android:layout_gravity="center_vertical|right"
        android:id="@+id/batteryView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:src="@drawable/battery_frame"
        android:scaleType="fitXY"
        />

</FrameLayout>
