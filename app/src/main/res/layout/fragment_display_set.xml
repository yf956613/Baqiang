<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="18dip"
        android:paddingRight="18dip"
        android:paddingTop="5dip">

        <TextView
            android:id="@+id/import_format"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/set_display_column"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/reset_param"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:background="@drawable/custom_btn_selector"
            android:text="@string/btn_reset"
            android:textColor="@color/color_611D64" />

    </LinearLayout>

    <ListView
        android:id="@+id/mListView"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:divider="@null">

    </ListView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:background="@drawable/table_header_bg">

        <LinearLayout
            android:id="@+id/sequence_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>