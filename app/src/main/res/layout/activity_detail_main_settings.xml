<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="com.jiebao.baqiang.activity.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_auto_upload_time"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_auto_upload_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/goods_scan_selector"></Button>

                <TextView
                    style="@style/ItemNameTextStyle"
                    android:text="1.自动上传时间" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sign_settings"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_sign_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/goods_storage_selector" />

                <TextView
                    style="@style/ItemNameTextStyle"
                    android:text="2.签名设置" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_redo_scan"
                android:layout_width="5dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_redo_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/goods_output_selector" />

                <TextView
                    style="@style/ItemNameTextStyle"
                    android:text="3.重复扫描" />

            </LinearLayout>


        </LinearLayout>
    </FrameLayout>

</LinearLayout>
